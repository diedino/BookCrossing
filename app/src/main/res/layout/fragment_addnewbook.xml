<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto"
            android:text="Об авторе:"
            android:textSize="30dp" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_addnewbook" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rTextSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author">

        <EditText
            android:id="@+id/rSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Фамилия"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rTextSurname">


        <EditText
            android:id="@+id/rName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Имя"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rTextPatronymic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rTextName">


        <EditText
            android:id="@+id/rPatronymic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Отчество"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rTextPatronymic"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto"
            android:text="О книге:"
            android:textSize="30dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rTextBookname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book">

        <EditText
            android:id="@+id/rBookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Название книги"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/rTextISBN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rTextBookname">


        <EditText
            android:id="@+id/rISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="ISBN"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/genre_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rTextISBN"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:entries="@array/genre_array"
            android:paddingTop="20dp" />

        <android.support.design.widget.TextInputLayout
        android:id="@+id/rTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genre_spinner">


            <EditText
                android:id="@+id/rDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Описание"
                android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rTextDescription"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:text="Добавить"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</ScrollView>